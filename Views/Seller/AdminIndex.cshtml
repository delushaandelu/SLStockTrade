@model IEnumerable<Seller>

@{
    ViewBag.Title = "Seller List";
}

<h3>Manage Sellers</h3>


<div class="text-right">
    <a asp-controller="Seller" asp-action="AdminCreateSeller" class="btn btn-success">Create New Seller</a>
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Business Name</th>
            <th scope="col">Incharge Person</th>
            <th scope="col">Country</th>
            <th scope="col">Location</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seller in Model)
        {
            <tr>
                <td>@seller.BusinessName</td>
                <td>@seller.InChargePerson</td>
                <td>@seller.Country</td>
                <td>@seller.Location</td>
                <td class="text-left">
                    <a asp-action="AdminDetails" asp-controller="Seller" asp-route-Id="@seller.Id" class="btn btn-info m-1">View</a>
                    <a asp-action="AdminEditSeller" asp-controller="Seller" asp-route-Id="@seller.Id" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
